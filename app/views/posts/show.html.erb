<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
<% end %>




<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
